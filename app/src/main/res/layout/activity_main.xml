<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/nomeCarroId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Car_name"
        android:inputType="text" />

    <EditText
        android:id="@+id/marcaId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:hint="@string/Car_brand"
        android:inputType="text" />

    <EditText
        android:id="@+id/modeloId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:hint="@string/Car_model"
        android:inputType="text" />

    <ImageView
        android:id="@+id/imageId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:srcCompat="@drawable/mercedes" />

    <Button
        android:id="@+id/btnCriarCarro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Create_car" />

    <Button
        android:id="@+id/btnAcelerarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/speedUp" />

    <Button
        android:id="@+id/btnFrearId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/Break" />

    <Button
        android:id="@+id/btnStopId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/stop" />

    <Button
        android:id="@+id/btnTurboId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/turbo" />

    <TextView
        android:id="@+id/velocimetroId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:text=""
        android:visibility="invisible" />

</LinearLayout>